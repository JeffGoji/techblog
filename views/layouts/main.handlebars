</title>

<!--GOOGLE Font link-->

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Monoton&family=Orbitron:wght@900&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"

      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="/stylesheets/styles.css" />
  </head>

  <body>
    
    <!--Nav Bar at very top-->
    <nav class="navbar navbar-expand-lg navbar-dark">

        <a class="navbar-brand fs-1 title-nav" href="/">Tech-Blog 9000</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNavDropdown"
          aria-controls="navbarNavDropdow"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav">

                        {{!-- <li class="nav-item m-3 fs-5">
              <a class="nav-link active" aria-current="page" href="/">homepage</a>
            </li> --}}

            <li class="nav-item m-3 fs-4">
              {{#if loggedIn}}
                <a
                  class="nav-link active"
                  aria-current="page"
                  href="/dashboard"
                >User Dashboard</a>
            
            <li class="nav-item m-3 fs-4">
              <a class="nav-link active" aria-current="page" href="/">Main Page</a>
            </li>

            <li class="nav-item">
              <button
                id="logout"
                type="button"
                class="btn btn-light btn-lg rounded-pill mt-3 m-2 fs-4"
              >Log-Out</button>
            </li>
              {{else}}
                <li class="nav-item">
                  <a class="nav-link" href="/login"><button
                      type="button"
                      class="btn btn-dark btn-lg rounded-pill mt-2 fs-4"
                    >Sign-In</button></a>
              </li>
                        <li class="nav-item">
              <a class="nav-link" href="/signup">
                <button
                  type="button"
                  class="btn btn-dark btn-lg rounded-pill mt-2 fs-4"
                >Sign-Up</button></a>
            </li>
              {{/if}}
          </ul>
        </div>
      </div>
    </nav>

    <!--End Navbar-->
    <!--Start of main section-->
    <div class="container-fluid">
    {{{body}}}
    </div>
    <!--End of the Main Section-->

  


    <!--Footer Section-->
    <footer class="bg-primary text-light">Built by Jeff</footer>
    <!--End of Footer section-->
