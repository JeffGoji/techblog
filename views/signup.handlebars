{{! <div class="container-fluid"> }}
<div class="row center">
  <div class="col-lg-7 col-md-7 col-sm-12">
    <h2 class="text-center mt-3">
      Sign-Up
    </h2>
    <p class="text-center">
      Just fill in your details below to sign up and start your tech blog!
    </p>
    <form
      class="signup-form mt-5 form-control shadow"
      id="signup-form"
      class="signup-form"
      name="signup-form"
    >
      <label for="username" class="form-label">
        Username:
      </label>
      <input
        type="text"
        id="username"
        class="form-control"
        placeholder="username"
      />
      <label for="email" class="form-label form-input">
        Email:
      </label>
      <input
        type="email"
        id="email"
        class="form-control email"
        placeholder="name@example.com"
      />
      <label for="password-signup" class="form-label">
        Password:
      </label>
      <input
        type="password"
        id="password"
        class="form-control"
        placeholder="password"
      />
      <button type="submit" class="btn btn-primary mt-4">
        Signup
      </button>
    </form>
  </div>
</div>
{{! </div> }}
<script src="/javascript/signup.js"></script>